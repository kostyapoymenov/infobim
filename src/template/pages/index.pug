            .container
                h3.main-subtitle Для архитекторов и дизайнеров
                .course-content
                    .course-item
                        .course-item__head
                            img.course-item__img(src="images/content/autoCad.png" alt="autoCad")
                        .course-item__bottom
                            .course-item__block
                                .course-item__name AutoCAD
                                button.course-item__btn(type="button") Подробнее >>
                            .course-item__price 12 000 руб.
                        button.btn Заказать
                    .course-item
                        .course-item__head
                            img.course-item__img(src="images/content/revitArchitecture.png" alt="Revit Architecture")
                        .course-item__bottom
                            .course-item__block
